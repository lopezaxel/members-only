<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <ul class="navbar">
        <li class="title">Members Only</li>
        <li><%= link_to 'Write post', 'posts/new' %></li>
        <li><%= link_to 'Log out', 'users/sign_out', method: "delete" %></li>
      </ul>
    <% else %>
      <ul class="navbar">
        <li class="title">Members Only</li>
        <li><%= link_to 'Log in', 'users/sign_in' %></li>
        <li><%= link_to 'Sign in', 'users/sign_up' %></li>
      </ul>
    <% end %>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
